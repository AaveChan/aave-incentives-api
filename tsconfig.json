{
  "exclude": [
    "./coverage",
    "./dist",
    "./tests",
    "eslint.config.mjs",
    "vitest.config.ts",
    "vitest.e2e.config.ts"
  ],
  "ts-node": {
    "transpileOnly": true,
    "files": true
  },
  "compilerOptions": {
    "target": "es2024",
    "module": "nodenext",
    "lib": ["ES2024"],
    "rootDir": "./src",
    "moduleResolution": "nodenext",
    "checkJs": true,
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitAny": true,
    "noImplicitOverride": true,
    "skipLibCheck": true,
    "noUncheckedIndexedAccess": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "resolveJsonModule": true,
    "baseUrl": "./",
    "paths": {
      "@/*": ["./src/*"]
    }
  }
}
